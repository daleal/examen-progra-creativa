<section class="hero is-info welcome is-small has-text-right">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Proyectos!
      </h1>
      <h2 class="subtitle">
        Aquí podrás ver todos los proyectos!
      </h2>
    </div>
  </div>
</section>

<section class="info-tiles">
  <div class="tile is-ancestor has-text-centered">
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="title"><%= @projects_amount %></p>
        <p class="subtitle"><%= "Proyecto".pluralize(@projects_amount) %></p>
      </article>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="title"><%= @users_amount %></p>
        <p class="subtitle"><%= "Usuario".pluralize(@users_amount) %></p>
      </article>
    </div>
  </div>
</section>

<section class="info-tiles">
  <div class="tile is-ancestor has-text-centered wrap">
    <% @projects.each do |project| %>
      <div class="tile is-parent is-4">
        <% user = User.find(project.user_id) %>
        <%= link_to user_project_path(user, project), class: "tile" do %>
          <article class="tile is-child box">
            <p class="title"><%= project.title %></p>
            <p class="subtitle"><%= user.username %></p>
            <figure class="image is-1by1">
              <% if project.snapshot.attached? %>
                <img src="<%= (url_for(project.snapshot))%>">
              <% else %>
                <img src="https://bulma.io/images/placeholders/480x480.png">
              <% end %>
            </figure>
          </article>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
