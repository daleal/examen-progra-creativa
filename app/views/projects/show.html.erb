<p class="title"><%= @project.title %></p>
<i>by <%= @user.email %></i>

<section class="info-tiles">
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      <article class="tile is-child box">
        <div id="sketch-holder" class="center-content">
          <script><%= render_project(@project) %></script>
        </div>
      </article>
    </div>
  </div>
</section>

<section class="info-tiles">
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="code-box" id="code-box"><%= @project.code.html_safe %></p>
      </article>
    </div>
  </div>
</section>

